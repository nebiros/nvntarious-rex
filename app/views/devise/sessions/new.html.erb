<h1 class="h3 mb-3 font-weight-normal"><%= t("please_sign_in") %></h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t("email") %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t("password") %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t("remember_me") %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t("login"), class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>