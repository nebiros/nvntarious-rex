<p id="notice"><%= notice %></p>

<h2><%= t("items") %></h2>
<div class="btn-group" role="group" aria-label="">
  <%= link_to t("new_item"), new_item_path, {class: "btn btn-secondary"} %>
</div>

<hr/>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th><%= t("product") %></th>
        <th><%= t("type") %></th>
        <th><%= t("quantity") %></th>
        <th><%= t("cost") %></th>
        <th><%= t("price") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= Item::TYPE[item.item_type].to_s.capitalize %></td>
          <td><%= item.quantity %></td>
          <td><%= item.cost %></td>
          <td><%= item.price %></td>
          <td><%= link_to t("show"), item %></td>
          <td><%= link_to t("edit"), edit_item_path(item) %></td>
          <td><%= link_to t("destroy"), item, method: :delete, data: { confirm: t("are_you_sure") } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>