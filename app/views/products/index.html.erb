<h2><%= t("products") %></h2>

<div class="btn-group" role="group" aria-label="">
  <%= link_to t("new_product"), new_product_path, {class: "btn btn-secondary"} %>
</div>

<hr/>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th><%= t("name") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= link_to t("show"), product %></td>
          <td><%= link_to t("edit"), edit_product_path(product) %></td>
          <td><%= link_to t("destroy"), product, method: :delete, data: { confirm: t("are_you_sure") } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>